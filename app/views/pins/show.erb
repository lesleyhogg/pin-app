<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <img src="<%= @pin.image.url(:medium) %>" alt="Pin image">
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
  <p>
    <%= link_to "Edit this pin!", "#{@pin.id}/edit", html_options = {class: "url"} %>
  </p>
</div>
<br/>
<a href="/">
  <i class="fa fa-undo"></i>
  Back to Home
</a>
